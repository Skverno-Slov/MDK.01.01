<Window x:Class="Task2.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
                Title="Окно авторизации" MinHeight="300" MinWidth="600" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <StackPanel>
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="LoginTextBox"/>
            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="InputPasswordBox"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Button x:Name="LoginButton" Content="Войти" Height="40" Width="80" Margin="10" Click="LoginButton_Click"/>
            <Button x:Name="CancelButton" Content="Отмена" Height="40" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
