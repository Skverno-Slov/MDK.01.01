<Window x:Class="Task5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task5"
        mc:Ignorable="d"
        Title="Задание 5" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Ellipse x:Name="ColorCircle"
                 Width="100" Height="100"
                 Stroke="Black"
                 StrokeThickness="2">
            <Ellipse.Fill>
                <RadialGradientBrush x:Name="GradientBrush">
                    <GradientStop Color="Orange" Offset="0"/>
                    <GradientStop Color="AliceBlue" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        
        <Button x:Name="ColorButton" Content="Изменить цвет" Click="ColorButton_Click"/>
    </StackPanel>
</Window>
