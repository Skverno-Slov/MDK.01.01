<Window x:Class="LabWork30.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork30"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Логин" HorizontalAlignment="Center"/>
        <TextBox/>
        <Label Content="Email" HorizontalAlignment="Center"/>
        <TextBox/>
        <Button x:Name="SubscribeButton"
                IsEnabled="False"
                Content="Подписаться"/>
        <CheckBox x:Name="AgreeCheckBox"
            Content="Я согласен на получение рассылки" 
            Checked="AgreeCheckBox_Checked"
            Unchecked="AgreeCheckBox_Checked"/>
    </StackPanel>
</Window>
