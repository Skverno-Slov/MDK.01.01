<Window x:Class="LabWork46.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork46"
        mc:Ignorable="d"
        Title="Главное окно" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Введите запрос"/>
        <TextBox x:Name="QueryTextBox" Text="UPDATE Game SET price += 1;"/>
        <Button x:Name="ExecuteButton" Content="Выполнить запрос" Click="ExecuteButton_Click"/>
        <TextBlock x:Name="ResultTextBlock"/>
        <TextBlock Text="Введите Id, название, цену и дату"/>
        <TextBox x:Name="IdParametrTextBox"/>
        <TextBox x:Name="TitleParametrTextBox"/>
        <TextBox x:Name="PriceParametrTextBox"/>
        <DatePicker x:Name="DateParametrTextBox"/>
        <Button x:Name="UpdateButton" Content="Изменить данные" Click="UpdateButton_Click"/>
        <Button x:Name="InsertButton" Content="Внести данные" Click="InsertButton_Click"/>
        <TextBlock x:Name="UpdateResultTextBlock"/>
    </StackPanel>
</Window>
