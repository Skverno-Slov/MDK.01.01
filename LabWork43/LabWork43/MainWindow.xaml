<Window x:Class="LabWork43.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork43"
        mc:Ignorable="d"
        Title="CookieClicker" Height="500" Width="800"
        MinHeight="500" MinWidth="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Left">
            <Grid>
                <Image x:Name="GrandmotherImage" 
                   Source="/Images/Grandmother.jpg"
                   Width="400" Height="400"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
                <Rectangle x:Name="GrandmotherRectangle"
                       Width="270" Height="400"
                       Fill="Transparent"
                       Cursor="Hand"
                       MouseDown="GrandmotherRectangle_MouseDown"/>
            </Grid>
            <Label x:Name="GrandmotherCountLable" Content="Бабушек 0"/>
            <Label Content="Цена 15 печенек"/>

        </StackPanel>

        <StackPanel DockPanel.Dock="Right">
            <Grid>
                <Image x:Name="CookieImage" Source="/Images/Cookie.png"
                   Width="400" Height="400"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
                <Ellipse x:Name="ClickerEllipse"
                         Width="250" Height="250"
                         Cursor="Hand"
                         Fill="Transparent"
                         MouseDown="ClickerEllipse_MouseDown"/>
            </Grid>
            <Label Name="CookiesCountLable" Content="Печенек 0"/>
        </StackPanel>
    </DockPanel>
</Window>
